1.Default Parametere

const bookings=[];
const currentBooking=(FlightNumber,Passenger,Price=566)=>
{
    const booking={
        FlightNumber,
        Passenger,
        Price
    };

    console.log(booking);
    bookings.push(booking);
}

currentBooking('B5673',542,7999);
console.log(bookings);
